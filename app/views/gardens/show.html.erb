<div class="mt-3" style="width: 100%; height: 80px; background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.banner_url %>);">
  <div class="container text-center">
    <h1><%= @garden.name %></h1>
  </div>
</div>

<div class="container my-5">
  <div class="row">
    <div class="col">
      <div class="cards">
        <% @garden.plants.each do |plant| %>
          <div class="card-category rounded" style=" /*width: 190px; height: 190px;*/ background-position: center; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= plant.image_url %>)">
            <%= plant.name %>
            <%= link_to plant_path(plant) , method: :delete, data: { confirm: 'Are you sure?' }, class: 'card-remove-link' do %>
              <i class="fa fa-trash"></i>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Form -->

<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
      <h4>Add a new plant</h4>
      <%= simple_form_for([@garden, @plant]) do |f| %>
      <%= f.input :name %>
      <%= f.input :image_url %>
      <%= f.submit 'Save your plant', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_garden_path(@garden) %> |
<%= link_to 'Back', gardens_path %>
